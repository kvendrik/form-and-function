<% layout('_inc/layout') -%>

<div class="container">

    <div id="message-template--left" style="display: none;">
        <div class="message">
            <p>{{text}}</p>
            {{media}}
            {{footer}}
        </div>
    </div>
    <div id="message-template--right" style="display: none;">
        <div class="message message--right">
            <p>{{text}}</p>
            {{media}}
            {{footer}}
        </div>
    </div>

    <section class="col col--half col--overflow"
    data-feed data-feed-query="from:kvendrik" data-feed-template="#message-template--left"></section>

    <section class="col col--half col--overflow"
    data-feed data-feed-query="from:krijnenbeebie" data-feed-template="#message-template--right"></section>

    <div class="col text-center">
        <div class="loader"></div>
    </div>

</div>